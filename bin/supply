#!/bin/bash
set -euo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
DEPS_IDX=$4

export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`
source "$BUILDPACK_DIR/scripts/install_go.sh"
output_dir=$(mktemp -d -t supplyXXX)

echo "-----> Running go build supply"
pushd $BUILDPACK_DIR
GOROOT=$GoInstallDir/go $GoInstallDir/go/bin/go build -o $output_dir/supply ./src/nodejs/supply/cli
popd

# Add ffmpeg / ghostscript / convert binaries and libraries to path
echo "-----> Installing ffmpeg and ghostscript"

BP_DIR=$(cd $(dirname $0); cd ..; pwd)

mkdir -p "$BUILD_DIR/vendor/"
tar xzf $BP_DIR/vendor/ffmpeg.tar.gz -C $BUILD_DIR/vendor/
tar xzf $BP_DIR/vendor/ghostscript.tar.gz -C $BUILD_DIR/vendor/
tar xzf $BP_DIR/vendor/convert.tar.gz -C $BUILD_DIR/vendor/

mkdir -p "$BUILD_DIR/.profile.d"
echo "export PATH=\"\$HOME/vendor/ffmpeg/bin:\$PATH\";" >> "$BUILD_DIR/.profile.d/ffmpeg.sh"
echo "export PATH=\"\$HOME/vendor/ghostscript/bin:\$PATH\";" >> "$BUILD_DIR/.profile.d/ghostscript.sh"
echo "export PATH=\"\$HOME/vendor/convert/bin:\$PATH\";" >> "$BUILD_DIR/.profile.d/convert.sh"

$output_dir/supply "$BUILD_DIR" "$CACHE_DIR" "$DEPS_DIR" "$DEPS_IDX"
